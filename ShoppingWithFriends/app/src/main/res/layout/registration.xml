<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/testBackground"
    android:touchscreenBlocksFocus="false"
    android:weightSum="1"
    tools:context="com.example.pranav.shoppingwithfriends.Registration">
    <!--tools:context="com.example.pranav.shoppingwithfriends.registration-->

    <ScrollView
        android:id="@+id/registration_form_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/textView9"
        android:layout_alignParentStart="true"
        android:fillViewport="false">

        <RelativeLayout
            android:id="@+id/registration_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/Registration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="26dp"
                android:text="@string/registration"
                android:textColor="#ffc2c2c2"
                android:layout_centerHorizontal="true"
                android:textSize="40dp" />




        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/retButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onReturnPress"
        android:text="Home"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/regButton" />

    <Button
        android:id="@+id/regButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onRegisterPress"
        android:text="@string/register"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/textView9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailEditText"
        android:hint="@string/email"
        android:textColorHint="#ffc2c2c2"
        android:nestedScrollingEnabled="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="101dp"
        android:textColor="#ffc2c2c2"
        android:layout_alignEnd="@+id/retButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameEditText"
        android:hint="@string/username"
        android:textColorHint="#ffc2c2c2"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/emailEditText"
        android:textColor="#ffc2c2c2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordEditText"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="#ffc2c2c2"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/usernameEditText"
        android:textColor="#ffc2c2c2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmEditText"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:textColorHint="#ffc2c2c2"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/passwordEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstNameEditText"
        android:hint="@string/first_name"
        android:textColorHint="#ffc2c2c2"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/confirmEditText"
        android:textColor="#ffc2c2c2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastNameEditText"
        android:hint="@string/last_name"
        android:textColorHint="#ffc2c2c2"
        android:nestedScrollingEnabled="true"
        android:layout_below="@+id/firstNameEditText"
        android:textColor="#ffc2c2c2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
